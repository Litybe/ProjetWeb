            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href={{ path('pw_user_catalogue') }}>ePortFolio</a></li>
                    <li><a href={{ path('pw_user_profile') }}>Connexion</a></li>
